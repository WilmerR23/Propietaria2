@model WilmerRentCar.BOL.Dtos.VehículoDto

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/Datatable.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/css/carousel.css" />

<div>
    <div class="container">
        <br><h3>Registrar un vehículo </h3><hr>

        <div class="row">
            <div class="col-sm-4 col-md-4">
                <label style="margin-bottom: 2px;">Tipo de vehículo</label>
                <select class="form-control" style="min-width:200px;" id="tipovehiculo">
                    <option value="-99">Seleccione vehiculo</option>
                    @foreach (var item in ViewBag.TipoVehiculo)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>

            <div class="col-sm-4 col-md-4">
                <label style="margin-bottom:2px;">Marca</label>
                <select class="form-control" style="min-width:200px;" id="marca">
                    <option value="-99">Seleccione marca</option>
                    @foreach (var item in ViewBag.Marca)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>

            <div class="col-sm-4 col-md-4">
                <label style="margin-bottom:2px;">Modelo </label>
                <select class="form-control" style="min-width:200px;" disabled id="modelo">
                </select>
            </div>
        </div>

        <div class="row" style="margin-top: 10px;">
            <div class="col-sm-4 col-md-4">
                <label style="margin-bottom: 2px;">Año</label>
                <input type="text" class="form-control" style="min-width:200px;" id="anovehiculo" placeholder="Ingresar año del vehículo">
            </div>

            <div class="col-sm-4 col-md-4">
                <label style="margin-bottom:2px;">Placa</label>
                <input type="text" maxlength="7" class="form-control" style="min-width:200px;" id="placa" placeholder="Ingresar placa del vehículo">
            </div>

            <div class="col-sm-4 col-md-4">
                <label style="margin-bottom:2px;">Imagenes del vehículo</label>
                <input type="file" class="form-control" name="imagenes" style="min-width:200px;" id="imagenes" multiple>
            </div>
        </div>

        <div class="row" style="margin-top: 15px; margin-bottom: 15px;">
            <div class="col-sm-4 col-md-4">
                <label style="margin-bottom:2px;">Monto</label>
                <input type="text" class="form-control" style="min-width:200px;" id="monto" placeholder="Ingresar monto por dia del vehículo">
            </div>
            <div class="col-sm-8 col-md-8">
                    <button type="button" style="margin-top:22px;" class="btn btn-success" id="btnguardar">Guardar</button>
            </div>
        </div>

        <div class="col-sm-12 col-md-12">
            <table id="tbvehiculos" class="table table-striped table-bordered" style="width:100%">
                <thead>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>

        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Imagenes</h4>
                    </div>
                    <div class="modal-body">
                        <div class="gallery">
                            <div class="gallery-container">

                            </div>
                            <div class="gallery-controls"></div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@section scripts {

    <script src="~/Scripts/app/Datatable.js"></script>
    <script src="~/Scripts/app/Vehiculo.js"></script>

    <script src="~/Scripts/app/moment.js"></script>
    <script src="~/Scripts/app/momentl.js"></script>

    <script src="~/Scripts/app/carousel.js"></script>
}

